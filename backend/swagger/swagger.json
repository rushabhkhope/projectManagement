                    },
                    "lastName": {
                      "type": "string",
                      "description": "Last name of the user"
                    },
                    "email": {
                      "type": "string",
                      "description": "Email address of the user"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "User already exists with this email"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
